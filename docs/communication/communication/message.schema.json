{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InterTeamMessage",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "from_agent": { "type": "string", "minLength": 1 },
    "team": { "type": "string", "minLength": 1 },
    "role": { "type": "string", "enum": ["spec","impl","test","audit","ops","coord"] },
    "tm_ids": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "task_id": { "type": ["string","number"] },
    "subtask_id": { "type": ["string","number"] },
    "event": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "minLength": 1 },
    "severity": { "type": "string", "enum": ["INFO","WARN","CRITICAL"] },
    "timestamp": { "type": "string" },
    "correlation_id": { "type": "string", "minLength": 8 },
    "details": { "type": "string", "maxLength": 1500 },
    "links": { "type": "array", "items": { "type": "string", "format": "uri" }, "maxItems": 10 },
    "test_refs": { "type": "array", "items": { "type": "string" }, "maxItems": 10 },
    "doc_refs": { "type": "array", "items": { "type": "string" }, "maxItems": 10 },
    "env": { "type": "string", "enum": ["dev","ci","staging","prod"] }
  },
  "required": [
    "from_agent", "team", "role", "tm_ids", "task_id", "event", "status", "timestamp", "correlation_id"
  ],
  "allOf": [
    { "if": { "properties": { "status": { "const": "READY" } } },
      "then": { "required": ["links"] }
    }
  ]
}
