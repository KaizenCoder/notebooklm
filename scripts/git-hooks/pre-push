#!/usr/bin/env pwsh
# Wrapper pour Git hook pre-push (redirige vers pre-push.ps1)
$ErrorActionPreference = 'Stop'
$script = Join-Path $PSScriptRoot 'pre-push.ps1'
if (-not (Test-Path $script)) {
  Write-Host "[hook pre-push] script PowerShell absent, skip"; exit 0
}
& pwsh -NoProfile -ExecutionPolicy Bypass -File $script
exit $LASTEXITCODE
